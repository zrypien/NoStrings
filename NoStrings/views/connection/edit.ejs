<%- include('../partials/header.ejs')%>
<div class = "content">
    <h1>Edit Event</h1>
    <form method = "POST" action = "/connections/<%= connection.id%>?_method=PUT">
            <label for="topic">Topic:</label>
            <input type="text" id="topic" name="topic" placeholder="Topic" value = "<%= connection.topic%>" required>
            <br><br>
        
            <label for="title">Title:</label>
            <input type="text" id="title" name="title" placeholder= "Title" value= "<%= connection.title%>" required><br><br>
        
            <label for="description">Description:</label>
            <textarea id="description" name="description" placeholder="Description" > <%= connection.description%></textarea><br><br>
        
            <label for="location">Where:</label>
            <input type="text" id="location" name="location" placeholder = "Location" value = "<%= connection.location%>"><br><br>
        
            <label for="date">When:</label>
            <input type="date" id="date" name="date" value = "<%= connection.date%>"><br><br>
        
            <label for="start">Start:</label>
            <input type="time" id="start" name="start" value = "<%= connection.start%>"> <br><br>
        
            <label for="end">End:</label>
            <input type="time" id="end" name="end" value = "<%= connection.end%>"> <Br><br>
        
            <label for="imageURL">Image URL:</label>
            <input type="url" id="imageURL" name="imageURL" placeholder= "Image URL" value = "<%= connection.imageURL%>"><br><br>
        
            <button>Edit Connection</button>     
    </form>

    </div>
    <%- include('../partials/footer.ejs')%>
